<div class="row">
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div class="col-lg-6 well">
    <h3>Blocks</h3>
    <hr>
    <div id="friends">
      <%= render('block_user', blocks: @blocks)  %>
      <%= render('shared/no_resource', resources: 'blocks') if @blocks.empty? %>
    </div>
    <%= will_paginate @blocks if @blocks.present? %>
  </div>
  <div class="col-lg-3">
    <%= render 'shared/links' %>
  </div>
</div>