<h5>
  <%= fa_icon 'shield' %>
  <%= pluralize(user.posts_count, 'post') %>
</h5>
<% if user.dob.present? %>
  <h5>
    <%= fa_icon user.sex %>
    <%= "#{pluralize(user.age, 'year')} old" %>
  </h5>
<% end %>
<% if user.location.present? %>
  <h5>
    <%= fa_icon 'map-marker' %>
    <%= user.location + ' - ' %>
    <%= Geocoder::Calculations.distance_between([current_user.latitude, current_user.longitude],
                               [user.latitude, user.longitude]).to_i.to_s + ' km distance from you' %>
  </h5>
<% end %>
<h5>
  <%= fa_icon 'heart' %><%= pluralize(user.points, 'point') %>
</h5>
<% if user.tags.empty? %>
  <h5>No tags yet.</h5>
<% else %>
  <h5>
    <%= fa_icon 'hashtag' %>
    <% user.tags.each do |tag| %>
      <%= "#{tag.name} " %>
    <% end %>
  </h5>
<% end %>